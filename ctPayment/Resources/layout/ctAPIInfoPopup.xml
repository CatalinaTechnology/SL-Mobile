<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<TextView
			android:id="@+id/CpnyIDLabel"
			android:layout_marginTop="20dp"
			android:layout_marginLeft="10dp"
			android:layout_width="wrap_content"
			android:layout_height="14dp"
			android:text="SL CpnyID"
			android:textSize="12dp"
        />
	<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/CpnyID"
			android:layout_below="@id/CpnyIDLabel"
        />
	<TextView
			android:id="@+id/URILabel"
			android:layout_marginTop="20dp"
			android:layout_marginLeft="10dp"
			android:layout_width="wrap_content"
			android:layout_height="14dp"
			android:text="ctAPI URI"
			android:textSize="12dp"
			android:layout_below="@id/CpnyID"
       />

	<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/ctAPIURI"
			android:layout_below="@id/URILabel"
        />
	<TextView
			android:id="@+id/AuthLabel"
			android:layout_marginTop="20dp"
			android:layout_marginLeft="10dp"
			android:layout_width="wrap_content"
			android:layout_height="14dp"
			android:text="ctAPI Auth"
			android:textSize="12dp"
			android:layout_below="@id/ctAPIURI"
        />
	<EditText
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/ctAPIAuth"
			android:layout_below="@id/AuthLabel"
        />

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_below="@id/ctAPIAuth"
	android:gravity="right"
        >
		<Button
		android:id="@+id/btnAuthCancel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Cancel"
		android:textAllCaps="false"
            />

		<Button
		android:id="@+id/btnAuthOk"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Submit"
		android:textAllCaps="false"
		android:layout_gravity="bottom"
		android:layout_toRightOf="@id/btnAuthCancel"
            />
	</RelativeLayout>
</RelativeLayout>
